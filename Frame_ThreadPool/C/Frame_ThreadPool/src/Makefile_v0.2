
CFLAGS = -g -Wall

#本工程需要的所有对象文件
OBJLIST = Main_Thread_Pool.o \
    AddWork_Frame.o \
    DoWork_Frame.o \
    Common.o


#编译所有子目录
SUBDIRS=`ls -d */ | grep -v 'bin' | grep -v 'lib' | grep -v 'include'`
#编译指定子目录
#SUBDIRS=dir1 dir2 dir3

#编译子目录
define make_subdir
 @for subdir in $(SUBDIRS) ; do \
 ( cd $$subdir && make $1) \
 done;
endef


all:
	$(call make_subdir , all)

debug:
	$(call make_subdir , debug)

clean:
	$(call make_subdir , clean)

